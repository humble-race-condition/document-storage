pipeline {
    agent any

    environment {
        JAVA_HOME = "/usr/lib/jvm/java-21-openjdk"
        PATH = "${JAVA_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/humble-race-condition/document-storage.git', branch: '${env.BRANCH_NAME}'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
            // Force the stage bubble to red if not already
//             script {
//                 if (currentBuild.result != 'FAILURE') {
//                     currentBuild.result = 'FAILURE'
//                 }
//             }
        }
    }
}
