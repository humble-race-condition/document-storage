pipeline {
    agent any

    environment {
        JAVA_HOME = "${env.JAVA_21_HOME}"
        PATH = "${env.JAVA_21_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checkout branch: ${env.BRANCH_NAME}"
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "Build branch: ${env.BRANCH_NAME}"
                sh 'mvn clean compile'
            }
        }

        stage('Test build') {
            steps {
                echo "Test build: ${env.BRANCH_NAME}"
                sh 'mvn clean test'
            }
        }

        stage('Package build') {
            steps {
                echo "Package build: ${env.BRANCH_NAME}"
                sh 'mvn clean package -DskipTests'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
