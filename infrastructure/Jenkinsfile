pipeline {
    agent any

    environment {
        JAVA_HOME = "${env.JAVA_21_HOME}"
        PATH = "${env.JAVA_21_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checkout branch: ${env.BRANCH_NAME}"
                checkout scm
                echo "Checkout branch2: ${env.BRANCH_NAME}"

            }
        }

        stage('Build') {
            steps {
                sh 'env | sort'
                echo "Build branch: ${env.BRANCH_NAME}"
                sh 'mvn clean package'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
